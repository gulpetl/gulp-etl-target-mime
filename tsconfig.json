{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2016",
        "module":"commonjs",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "strict": true,
        "sourceMap": true,    /* it's either/or with inlineSourceMap below */
        //"inlineSourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declarationDir": "dist/types",
        "outDir": "dist/js",
        "typeRoots": [
          "node_modules/@types"
        ],

    },
    "include": [
        "src"
    ]
}
